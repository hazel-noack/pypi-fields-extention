{
    "manifest_version": 2,
    "name": "PyPi copy dependencies",
    "version": "1.0",

    "icons": {
        "32": "popup/icon.svg",
        "64": "popup/icon.svg"
    },


    "description": "Adds a field, to copy dependencies directly from PyPi.",

    "permissions": ["storage"],

    "browser_specific_settings": {
        "gecko": {
            "id": "@pypi-copy-dependencies"
        }
    },

    "browser_action": {
        "default_icon": "popup/icon.svg",
        "default_title": "PyPi copy dependency",
        "default_popup": "popup/config.html"
    },

    "content_scripts": [
        {
            "matches": ["*://pypi.org/project/*", "*://test.pypi.org/project/*"],
            "js": ["content_scripts/add_fields.js"]
        }
    ]
}